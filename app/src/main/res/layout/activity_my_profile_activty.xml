<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E6E6E6"
    android:layout_height="match_parent"
    tools:context=".EarnAndRefferActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/clidlayout"
        android:background="@drawable/topimg"
        android:layout_height="170dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/backpresslayout"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/imgback"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textviewback"
                android:layout_toRightOf="@id/imgback"
                android:text="Back"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">


<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="100dp"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="20dp"
    app:civ_border_width="1dp"
    app:civ_circle_background_color="#fff"
    android:id="@+id/profileimg"
    android:src="@drawable/profilmgg"
    app:civ_border_color="#B3B1B1"

    android:layout_height="100dp" />
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/changeimage"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/linearlayout"
    android:layout_below="@id/clidlayout"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

</LinearLayout>
    <include
        android:id="@+id/cleanderlayoutt"
        layout="@layout/profilelayout"
        android:layout_below="@id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>


</RelativeLayout>
