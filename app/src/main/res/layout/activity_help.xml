<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EarnAndRefferActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/clidlayout"
        android:background="@drawable/topimg"
        android:layout_height="170dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/backpresslayout"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/imgback"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textviewback"
                android:layout_toRightOf="@id/imgback"
                android:text="Back"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="HELP?"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/amiko"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/clidlayout"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="200dp"
            android:id="@+id/referimg"
            android:layout_centerHorizontal="true"
            android:src="@drawable/vacationimage"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textview"
            android:layout_below="@id/referimg"
            android:layout_centerHorizontal="true"
            android:text="You have no vacation added"
            android:textSize="12dp"
            android:fontFamily="@font/amiko"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/addvacation"
            android:background="@drawable/gradient2"
            android:text="Add Vacation"
            android:textColor="#fff"
            android:layout_below="@id/textview"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/discription"
        android:layout_margin="15dp"
        android:layout_below="@id/clidlayout"
        android:visibility="gone"
        android:textSize="12dp"
        android:fontFamily="@font/amiko"
        android:layout_centerHorizontal="true"
        android:text="We all knows how hard it can be make asite look the semo so to make your start into the world of x easy as possible we have include the demo content form our shoe case site simply import the sample files we ship with the theme and the core structure for your site is already built. keep mind that if you dont use the demo content, you'll much better off than with other themes since all n ew brands."
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/speak"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/clidlayout"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="#CACACA"
            android:id="@+id/view1"
            android:layout_toLeftOf="@id/textview"
            android:layout_centerVertical="true"
            android:layout_height="1dp">

        </View>
        <TextView
            android:layout_width="wrap_content"
            android:text="Speak to customer care"
            android:id="@+id/textview"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/amiko"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="#CACACA"
            android:id="@+id/viewr2"
            android:layout_toRightOf="@id/textview"
            android:layout_centerVertical="true"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text2"
        android:layout_below="@id/speak"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:fontFamily="@font/amiko"
        android:text="Custome Care No.-0120-4592000, 456000"
        android:layout_height="wrap_content" />
<Button
    android:layout_width="match_parent"
    android:background="@drawable/gradient2"
    android:layout_below="@id/text2"
    android:layout_marginTop="20dp"
    android:text="Write to us"
    android:textColor="#fff"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_height="35dp" />
</RelativeLayout>
