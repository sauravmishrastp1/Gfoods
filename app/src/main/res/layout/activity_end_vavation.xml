<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyWiseBillActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/layout"
        android:layout_below="@id/toolbar"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/startdate"
            android:fontFamily="@font/amiko"
            android:textSize="15dp"
            android:text="Start Date"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/linearlayout"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="08-07-2020"
                android:id="@+id/startdateEE"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:fontFamily="@font/amiko"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/next2"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:id="@+id/view"
            android:background="#BBBABA"
            android:layout_below="@id/startdate"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/enddate"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_below="@+id/startdate"
            android:text="End Date"
            android:textSize="15dp"
            android:fontFamily="@font/amiko"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/endlayout"
            android:layout_marginTop="26dp"
            android:layout_below="@id/startdate"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Optional"
                android:id="@+id/enddatee"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/amiko"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/next2"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:id="@+id/endview"
            android:background="#BBBABA"
            android:layout_below="@id/enddate"
            android:layout_height="1dp"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textview"

        android:layout_centerHorizontal="true"
        android:text="09 May,2020-Optional"
        android:textColor="#000"
        android:visibility="gone"
        android:textSize="12dp"
        android:fontFamily="@font/amiko"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/addvacationNNN"
        android:layout_marginTop="70dp"
        android:layout_below="@id/layout"
        android:background="@drawable/gradient2"
        android:text="Update Vacation"
        android:textColor="#fff"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_height="35dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="End Vacation"
        android:id="@+id/endvacation"
        android:layout_below="@id/addvacationNNN"
         android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amiko"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/progressbarr"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_height="wrap_content" />
</RelativeLayout>